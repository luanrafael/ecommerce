<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="ecommerce" transaction-type="RESOURCE_LOCAL">
		<class>org.fatec.les.model.entity.EnderecoEntity</class>
		<class>org.fatec.les.model.entity.ClienteEntity</class>
		<class>org.fatec.les.model.entity.UsuarioEntity</class>
		<class>org.fatec.les.model.entity.CamisetaEntity</class>

		<properties>

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="upload"/>

			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommerce" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
		</properties>
	</persistence-unit>
</persistence>
